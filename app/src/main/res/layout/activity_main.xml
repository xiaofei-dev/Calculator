<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.log.jsq.mainUI.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:fadingEdge="vertical"
            android:fillViewport="true"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteLow"
                android:fontFamily="sans-serif"
                android:gravity="bottom|right"
                android:minLines="1"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="?android:colorPrimary"
                android:textSize="36sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_view_ripple_orange"
                android:fontFamily="sans-serif"
                android:gravity="bottom|right"
                android:minLines="1"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="?android:colorPrimary"
                android:textSize="36sp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            style="@style/MainLinearLayout"
            android:layout_weight="1"
            android:background="?android:colorPrimary">

            <ImageButton
                android:id="@+id/bGuiLing"
                style="@style/MainButtonTheme"
                android:src="@drawable/yuan" />

            <ScrollView
                android:id="@+id/sv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fadingEdge="vertical"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewNum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:fontFamily="sans-serif"
                        android:gravity="center|right"
                        android:minLines="1"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textViewNum2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:fontFamily="sans-serif"
                        android:gravity="center|right"
                        android:minLines="1"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:visibility="gone" />

                </LinearLayout>

            </ScrollView>

            <ImageButton
                android:id="@+id/bShanChu"
                style="@style/MainButtonTheme"
                android:src="@drawable/sjx" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numsAndFuhaoLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout0"
            style="@style/MainLinearLayout">

            <Button
                android:id="@+id/b7"
                style="@style/MainButtonTheme"
                android:text="@string/_7" />

            <Button
                android:id="@+id/b8"
                style="@style/MainButtonTheme"
                android:text="@string/_8" />

            <Button
                android:id="@+id/b9"
                style="@style/MainButtonTheme"
                android:text="@string/_9" />

            <Button
                android:id="@+id/bChu"
                style="@style/MainButtonTheme"
                android:text="@string/chu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            style="@style/MainLinearLayout">

            <Button
                android:id="@+id/b4"
                style="@style/MainButtonTheme"
                android:text="@string/_4" />

            <Button
                android:id="@+id/b5"
                style="@style/MainButtonTheme"
                android:text="@string/_5" />

            <Button
                android:id="@+id/b6"
                style="@style/MainButtonTheme"
                android:text="@string/_6" />

            <Button
                android:id="@+id/bCheng"
                style="@style/MainButtonTheme"
                android:text="@string/cheng" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            style="@style/MainLinearLayout">

            <Button
                android:id="@+id/b1"
                style="@style/MainButtonTheme"
                android:text="@string/_1" />

            <Button
                android:id="@+id/b2"
                style="@style/MainButtonTheme"
                android:text="@string/_2" />

            <Button
                android:id="@+id/b3"
                style="@style/MainButtonTheme"
                android:text="@string/_3" />

            <Button
                android:id="@+id/bJian"
                style="@style/MainButtonTheme"
                android:text="@string/jian" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            style="@style/MainLinearLayout">

            <Button
                android:id="@+id/b0"
                style="@style/MainButtonTheme"
                android:text="@string/_0" />

            <Button
                android:id="@+id/bKuoHaoTou"
                style="@style/MainButtonTheme"
                android:text="@string/kuoHaoTou" />

            <ImageButton
                android:id="@+id/bZhuanHuan"
                style="@style/MainButtonTheme"
                android:src="@drawable/ic_swap_horiz"
                android:visibility="gone" />

            <Button
                android:id="@+id/bDian"
                style="@style/MainButtonTheme"
                android:text="@string/dian"
                android:visibility="gone" />

            <Button
                android:id="@+id/bKuoHaoWei"
                style="@style/MainButtonTheme"
                android:text="@string/kuoHaoWei"
                android:visibility="gone" />

            <Button
                android:id="@+id/bDengyu"
                style="@style/MainButtonTheme"
                android:text="@string/dengYu" />

            <Button
                android:id="@+id/bJia"
                style="@style/MainButtonTheme"
                android:text="@string/jia" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
